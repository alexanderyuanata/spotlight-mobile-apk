<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/book_card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:backgroundTint="@color/light_yellow"
    android:layout_marginHorizontal="20dp"
    android:layout_marginVertical="8dp"
    card_view:cardCornerRadius="8dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/activity_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/activities"
            android:textSize="13sp"
            android:textColor="@color/black"
            android:layout_marginStart="12dp"
            android:layout_marginTop="15dp"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/activity_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="13sp"
            android:textColor="@color/black"
            android:layout_marginStart="4dp"
            android:layout_marginTop="15dp"
            card_view:layout_constraintStart_toEndOf="@id/activity_title"
            card_view:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/date_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/date_title"
            android:textSize="13sp"
            android:textColor="@color/black"
            android:layout_marginStart="12dp"
            android:layout_marginTop="17dp"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toBottomOf="@id/activity_title"/>

        <TextView
            android:id="@+id/date_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="13sp"
            android:textColor="@color/black"
            android:layout_marginStart="4dp"
            android:layout_marginTop="17dp"
            card_view:layout_constraintStart_toEndOf="@id/date_title"
            card_view:layout_constraintTop_toBottomOf="@id/activity_title"/>

        <TextView
            android:id="@+id/time_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/time_title"
            android:textSize="13sp"
            android:textColor="@color/black"
            android:layout_marginStart="12dp"
            android:layout_marginTop="17dp"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toBottomOf="@id/date_title"/>

        <TextView
            android:id="@+id/time_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="13sp"
            android:textColor="@color/black"
            android:layout_marginStart="4dp"
            android:layout_marginTop="17dp"
            card_view:layout_constraintStart_toEndOf="@id/time_title"
            card_view:layout_constraintTop_toBottomOf="@id/date_title"/>

        <TextView
            android:id="@+id/category_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/category_title"
            android:textSize="13sp"
            android:textColor="@color/black"
            android:layout_marginStart="12dp"
            android:layout_marginTop="17dp"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toBottomOf="@id/time_title"/>

        <TextView
            android:id="@+id/category_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="13sp"
            android:textColor="@color/black"
            android:layout_marginStart="4dp"
            android:layout_marginTop="17dp"
            card_view:layout_constraintStart_toEndOf="@id/category_title"
            card_view:layout_constraintTop_toBottomOf="@id/time_title"/>

        <TextView
            android:id="@+id/description_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/description_title"
            android:textSize="13sp"
            android:textColor="@color/black"
            android:layout_marginStart="12dp"
            android:layout_marginTop="17dp"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toBottomOf="@id/category_title"/>

        <TextView
            android:id="@+id/description_text"
            android:layout_width="342dp"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="13sp"
            android:textColor="@color/black"
            android:layout_marginStart="12dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="15dp"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toBottomOf="@id/description_title"
            card_view:layout_constraintBottom_toBottomOf="parent"/>

        <ImageView
            android:id="@+id/schedule_delete_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_delete"
            android:layout_marginEnd="20dp"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintTop_toTopOf="parent"
            card_view:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>