<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.motion.widget.MotionLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layoutDescription="@xml/activity_welcome_scene"
    tools:context=".view.welcome.WelcomeActivity">

    <ImageView
        android:id="@+id/welcome_img_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:paddingHorizontal="20dp"
        app:layout_constraintStart_toEndOf="@+id/welcome_img_2"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/entertainme_welcome_img"/>

    <TextView
        android:id="@+id/welcome_title_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:text="@string/welcome_title_1"
        android:textColor="@color/purple"
        android:textSize="28sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/welcome_img_1"
        app:layout_constraintStart_toStartOf="@+id/welcome_img_1"
        app:layout_constraintEnd_toEndOf="@id/welcome_img_1"
        android:translationX="500dp"/>

    <TextView
        android:id="@+id/welcome_desc_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="59dp"
        android:paddingHorizontal="20dp"
        android:text="@string/welcome_desc_1"
        android:textAlignment="center"
        android:textColor="@color/text_color_primary"
        android:textSize="19sp"
        app:layout_constraintTop_toBottomOf="@+id/welcome_title_1"
        app:layout_constraintStart_toStartOf="@id/welcome_title_1"
        app:layout_constraintEnd_toEndOf="@id/welcome_title_1"
        android:translationX="500dp"/>

    <ImageView
        android:id="@+id/welcome_img_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:paddingHorizontal="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@+id/welcome_img_3"
        app:layout_constraintVertical_bias="0.3"
        app:srcCompat="@drawable/entertainme_welcome_img_2"
        android:translationX="500dp"/>

    <TextView
        android:id="@+id/welcome_title_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:text="@string/welcome_title_2"
        android:textColor="@color/purple"
        android:textSize="28sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/welcome_img_2"
        app:layout_constraintStart_toStartOf="@+id/welcome_img_2"
        app:layout_constraintEnd_toEndOf="@id/welcome_img_2"
        android:translationX="500dp"/>

    <TextView
        android:id="@+id/welcome_desc_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="59dp"
        android:paddingHorizontal="20dp"
        android:text="@string/welcome_desc_2"
        android:textAlignment="center"
        android:textColor="@color/text_color_primary"
        android:textSize="19sp"
        app:layout_constraintTop_toBottomOf="@+id/welcome_title_2"
        app:layout_constraintStart_toStartOf="@id/welcome_title_2"
        app:layout_constraintEnd_toEndOf="@id/welcome_title_2"
        android:translationX="500dp"/>

    <ImageView
        android:id="@+id/welcome_img_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:paddingHorizontal="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.3"
        app:srcCompat="@drawable/entertainme_welcome_img_3"
        android:translationX="500dp"/>

    <TextView
        android:id="@+id/welcome_title_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:text="@string/welcome_title_3"
        android:textColor="@color/purple"
        android:textSize="28sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/welcome_img_3"
        android:translationX="500dp"/>

    <TextView
        android:id="@+id/welcome_desc_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="59dp"
        android:paddingHorizontal="20dp"
        android:text="@string/welcome_desc_3"
        android:textAlignment="center"
        android:textColor="@color/text_color_primary"
        android:textSize="19sp"
        app:layout_constraintTop_toBottomOf="@+id/welcome_title_3"
        android:translationX="500dp"/>

    <androidx.constraintlayout.utils.widget.ImageFilterView
        android:id="@+id/menu1"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="152dp"
        android:layout_marginTop="50dp"
        app:altSrc="@drawable/ic_circle_full_24"
        app:layout_constraintEnd_toStartOf="@+id/menu2"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/ic_circle_24"
        app:tint="@color/purple"
        android:translationY="731dp"/>

    <androidx.constraintlayout.utils.widget.ImageFilterView
        android:id="@+id/menu2"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="10dp"
        app:altSrc="@drawable/ic_circle_full_24"
        app:layout_constraintBottom_toBottomOf="@+id/menu1"
        app:layout_constraintEnd_toStartOf="@+id/menu3"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/menu1"
        app:layout_constraintTop_toTopOf="@+id/menu1"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/ic_circle_24"
        app:tint="@color/purple"
        android:translationY="731dp"/>

    <androidx.constraintlayout.utils.widget.ImageFilterView
        android:id="@+id/menu3"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="10dp"
        app:altSrc="@drawable/ic_circle_full_24"
        app:layout_constraintBottom_toBottomOf="@+id/menu2"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/menu2"
        app:layout_constraintTop_toTopOf="@+id/menu2"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/ic_circle_24"
        app:tint="@color/purple"
        android:translationY="731dp"/>

    <Button
        android:id="@+id/start_btn"
        android:layout_width="187dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="700dp"
        android:text="@string/get_started"
        android:textSize="19sp"
        android:textStyle="bold"
        android:alpha="0"
        android:backgroundTint="@color/purple"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.motion.widget.MotionLayout>